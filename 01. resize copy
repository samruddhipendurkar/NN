image_path= "/mountain img.jfif"
image_path2="/content/mountain grey.jfif"
import cv2
from google.colab.patches import cv2_imshow
import matplotlib.pyplot as plt
# Read the image
image = cv2.imread(image_path)
image
# Define the new size (width, height)
new_size = (200, 200)  # Example size, you can change this

# Resize the image
resized_image = cv2.resize(image, new_size)

# Display the resized image using OpenCV
cv2_imshow(resized_image)
# Copy the resized image to a new variable
copied_image = resized_image.copy()

# Display the copied image using OpenCV
cv2_imshow(copied_image)
# Read the image
image = cv2.imread(image_path2)
image
# Define the new size (width, height)
new_size = (200, 200)  # Example size, you can change this

# Resize the image
resized_image = cv2.resize(image, new_size)

# Display the resized image using OpenCV
cv2_imshow(resized_image)
# Copy the resized image to a new variable
copied_image = resized_image.copy()

# Display the copied image using OpenCV
cv2_imshow(copied_image)
