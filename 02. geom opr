image_path= "/content/mountain img.jfif"
import cv2
from google.colab.patches import cv2_imshow
# Read the image
image = cv2.imread(image_path)
image
# Create a black and white image (Grayscale)
gray_image = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
cv2_imshow(gray_image)
#Draw a line on the image
line_image = image.copy()
start_point = (50, 50)
end_point = (200, 200)
color = (255, 0, 0)  # Blue in BGR
thickness = 2
cv2.line(line_image, start_point, end_point, color, thickness)
cv2_imshow(line_image)
#Draw an arrowed line on the image
arrowed_line_image = image.copy()
start_point = (50, 50)
end_point = (200, 200)
color = (0, 255, 0)  # Green in BGR
thickness = 2
cv2.arrowedLine(arrowed_line_image, start_point, end_point, color, thickness)
cv2_imshow(arrowed_line_image)
#Draw a rectangle on the image
rectangle_image = image.copy()
top_left_corner = (50, 50)
bottom_right_corner = (200, 200)
color = (0, 0, 255)  # Red in BGR
thickness = 2
cv2.rectangle(rectangle_image, top_left_corner, bottom_right_corner, color, thickness)
cv2_imshow(rectangle_image)
#Draw a circle on the image
circle_image = image.copy()
center = (150, 150)
radius = 50
color = (255, 255, 0)  # Cyan in BGR
thickness = 2
cv2.circle(circle_image, center, radius, color, thickness)
cv2_imshow(circle_image)
#Draw text on the image
text_image = image.copy()
text = "Hello, OpenCV"
org = (50, 50)
font = cv2.FONT_HERSHEY_SIMPLEX
font_scale = 1
color = (255, 255, 255)  # White in BGR
thickness = 2
cv2.putText(text_image, text, org, font, font_scale, color, thickness, cv2.LINE_AA)
cv2_imshow(text_image)
